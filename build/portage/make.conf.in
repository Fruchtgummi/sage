# Default distfiles mirrors. This rotation has multiple hosts and is reliable.
# Approved by the mirror-admin team.
GENTOO_MIRRORS="http://distfiles.gentoo.org"

# Repository Paths
PORTDIR=${CONFIGURE_EPREFIX}/../build/pkgs
DISTDIR=${CONFIGURE_EPREFIX}/../upstream
PKGDIR=${PORTDIR}/packages
RPMDIR=${PORTDIR}/rpm

SAGE_ROOT=${CONFIGURE_EPREFIX}/..
SAGE_LOCAL=${CONFIGURE_EPREFIX}
SAGE_SHARE=${CONFIGURE_EPREFIX}/share
SAGE_EXTCODE=${CONFIGURE_EPREFIX}/sage/ext
SAGE_LOGS=${SAGE_ROOT}/logs/pkgs
SAGE_SRC=${SAGE_ROOT}/src
SAGE_DOC=${SAGE_SRC}/doc
PATH=${SAGE_SRC}/bin:${SAGE_LOCAL}/bin:${PATH}
